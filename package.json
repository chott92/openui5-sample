{
	"name": "@ui5/sample-app",
	"version": "0.5.0",
	"description": "Sample of an OpenUI5 app",
	"private": true,
	"engines": {
		"node": "^20.11.0 || >=22.0.0",
		"npm": ">= 8"
	},
	"dependencies": {
		"@cap-js-community/odata-v2-adapter": "^1.15.1",
		"@sap/cds": "^9",
		"cors": "^2.8.5",
		"express": "^4"
	},
	"scripts": {
		"start": "ui5 serve --port 8080",
		"lint": "eslint webapp && ui5lint",
		"test-runner": "npx puppeteer browsers install chrome && ui5-test-runner --url http://localhost:8080/test/testsuite.qunit.html --start start --start-timeout 30000 --coverage -ccb 100 -ccf 100 -ccl 100 -ccs 100",
		"test": "npm run lint && npm run test-runner",
		"build": "ui5 build -a --clean-dest",
		"build-self-contained": "ui5 build self-contained -a --clean-dest",
		"serve-dist": "ws --compress -d dist",
		"start-cds": "cds-serve"
	},
	"devDependencies": {
		"@cap-js/cds-types": "^0.11.0",
		"@cap-js/sqlite": "^2",
		"@eslint/js": "^9.38.0",
		"@ui5/cli": "^4.0.34",
		"@ui5/linter": "^1.20.2",
		"@ui5/middleware-code-coverage": "^2.0.2",
		"eslint": "^9.38.0",
		"globals": "^16.5.0",
		"local-web-server": "^5.4.0",
		"rimraf": "^6.0.1",
		"ui5-test-runner": "^5.10.1"
	},
	"cds": {
		"requires": {
			"db": {
				"kind": "sqlite",
				"credentials": {
					"url": "db.sqlite"
				}
			}
		}
	}
}
